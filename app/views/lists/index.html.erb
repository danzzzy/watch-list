<%= render "components/index_navbar" %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1505686994434-e3cc5abf1330?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1652&q=80;">
  <div class="container">
    <h1>Movieland</h1>
    <p>Customize your list with some of the best movies out there!</p>
    <%= link_to "Start Now", new_list_path, class: "banner-new-list btn btn-secondary" %>
  </div>
</div>
<div class="container mt-5 home-page-text">
<h3>My Lists</h3>
  <div class="home-page-list">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : cl_image_path('samples/animals/kitten-playing.gif') %>)">
        <%= link_to list.name, list_path(list), class: "my-list" %>
    </div>
  <% end %>
</div>
</div>
